<p id="notice"><%= notice %></p>

<td><%= link_to 'Logout', destroy_user_session_path, method: :delete %></td>

<h3>Current user email: <%= current_user.email %></h3>
<h3><%= image_tag(current_user.avatar.thumb.url) if current_user.avatar? %></h3>

<br><br><br><br><br><br><br><br>

<%= link_to 'New Article', new_article_path %>


<h1>Article#index</h1>

<table>
  <thead>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.user_id.present? ? article.user.email : '------'  %></td>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= link_to 'Show', article %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>



