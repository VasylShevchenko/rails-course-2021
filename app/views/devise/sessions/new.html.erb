<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <%= image_tag 'bootstrap-solid.svg', width: "72", height: "72" %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>

  <%= f.label :password, class: 'sr-only' %>
  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password', required: true %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>

  <p class="mt-5 mb-3 text-muted">Â© 2017-2020</p>
<% end %>

<p class="mt-5 mb-3 text-muted">
  <%= render "devise/shared/links" %>
</p>
