<p id="notice"><%= notice %></p>

<td><%= link_to 'Logout', destroy_user_session_path, method: :delete %></td>
<h3>Current user email: <%= current_user.email %></h3>

<h2>Users</h2>
<!--<td><%#= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.age %></td>
        <td>x<%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

