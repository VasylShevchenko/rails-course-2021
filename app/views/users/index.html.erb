<p id="notice"><%= notice %></p>

<td><%= link_to 'Logout', destroy_user_session_path, method: :delete %></td>
<h3>Current user email: <%= current_user.email %></h3>
<h3><%= image_tag(current_user.avatar.thumb.url) if current_user.avatar? %></h3>
<h3><%= image_tag(current_user.avatar.url) if current_user.avatar? %></h3>


<h2>Users</h2>
<!--<td><%#= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Age</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.age %></td>
        <td
        <%= image_tag(user.avatar_url) if user.avatar? %>
        </td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

